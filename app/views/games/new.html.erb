
<div class="container">



  <div class="jumbotron">
    <h1 class="display-4">New Game</h1>
    <p class="lead">Score : <%= @total_score %></p>
    <hr class="my-4">
    <p>Some Letters :-).</p>
    <% @a =[] %>
    <ul>
      <% @letters.each do |letter| %>

      <li class="d-inline bg-primary text-white shadow-lg px-3  m-1 rounded justify-content-around align-items-center">
        <% @a << letter %>
        <%=  letter %>
      </li>

      <% end %>
    </ul>



    <form action="score" method="post">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
     <%= hidden_field_tag 'letters', @a %>

      <div class="form-group">
        <label for="answer">What is the longest word you can find ?</label>
        <input type="text" name ="answer" class="form-control" id="text-field" placeholder="Your word">
      </div>

      <button type="submit" class="btn btn-primary">Play</button>
    </form>



    <a class="btn btn-warning" href="#" role="button">New Letters</a>
  </div>

</div>




